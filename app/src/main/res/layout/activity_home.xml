<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.tim.fypapp.HomeActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@drawable/pencil_logo" />

    <TextView
        android:id="@+id/userLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStudent"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/viewAllClasses"
        android:layout_toRightOf="@+id/viewAllClasses"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/addStudent"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="Add Student" />

    <Button
        android:id="@+id/viewAllClasses"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="View Classes" />

    <Button
        android:id="@+id/takeAttendance"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="Take Attendance For A Class" />

</LinearLayout>
