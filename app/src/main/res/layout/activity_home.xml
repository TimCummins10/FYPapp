<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.tim.fypapp.HomeActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@drawable/pencil_logo" />

    <TextView
        android:id="@+id/welcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Welcome" />

    <TextView
        android:id="@+id/basictext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="What would you like to do?" />


    <Button
        android:id="@+id/addClass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="Add Class" />

    <Button
        android:id="@+id/removeClass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="Remove Class" />

    <Button
        android:id="@+id/addStudent"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="Add Student" />

    <Button
        android:id="@+id/viewAllClasses"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Classes" />

    <Button
        android:id="@+id/takeAttendance"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="Take Attendance For A Class" />

    <Button
        android:id="@+id/viewStats"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="View Attendance Record" />

</LinearLayout>
